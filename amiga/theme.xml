<theme>
	<formatVersion>3</formatVersion>
	<include>./../Swatch.xml</include>
	
	<!-- Configuración Global de Imágenes -->
	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./../_inc/caratulas/${system.theme}.png</path>
		</image>
		<image name="background_system_image" extra="true">
			<path>./../_inc/background/${system.theme}.jpg</path>
		</image>
		<image name="console_image">
			<path>./../_inc/consoles/${system.theme}.png</path>
		</image>
	</view>

	<!-- Vista Básica -->
	<view name="basic">
		<image name="background" extra="true">
			<path>./../_inc/images/bg_bokeh.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		<image name="console_image" extra="true">
			<path>./../_inc/consoles/${system.theme}.png</path>
			<pos>0.02 0.02</pos>
			<size>0.1 0.1</size>
			<origin>0 0</origin>
			<zIndex>1</zIndex>
		</image>
	</view>

	<!-- Vista Detallada -->
	<view name="detailed">
		<image name="console_image" extra="true">
			<path>./../_inc/consoles/${system.theme}.png</path>
			<pos>0.02 0.02</pos>
			<size>0.1 0.1</size>
			<origin>0 0</origin>
			<zIndex>1</zIndex>
		</image>
		<!-- Puedes agregar otros elementos específicos para la vista detallada aquí -->
	</view>

	<!-- Vista de Video -->
	<view name="video">
		<image name="console_image" extra="true">
			<path>./../_inc/consoles/${system.theme}.png</path>
			<pos>0.02 0.02</pos>
			<size>0.1 0.1</size>
			<origin>0 0</origin>
			<zIndex>1</zIndex>
		</image>
		<!-- Puedes agregar otros elementos específicos para la vista de video aquí -->
	</view>
</theme>
