</view>

<!-- =========================================================
     VIDEO MODE (MISMA GEOMETRÍA)
     ========================================================= -->

<view name="video">
  <video name="md_video">
   <origin>0 0.66</origin>
    <pos>0.320 0.55</pos>
    <maxSize>0.30 0.25</maxSize>
    <delay>2</delay>
    <showSnapshotNoVideo>true</showSnapshotNoVideo>
    <zIndex>25</zIndex>
  </video>
</view>


<!-- =========================================================
     Z-INDEX CLEAN
     ========================================================= -->

<feature supported="z-index">
  <view name="video, detailed">
    <image name="background"><zIndex>1</zIndex></image>
    <image name="no_image_bg"><zIndex>10</zIndex></image>
    <image name="md_image"><zIndex>20</zIndex></image>
    <video name="md_video"><zIndex>25</zIndex></video>
    <image name="logo"><zIndex>45</zIndex></image>
    <textlist name="gamelist"><zIndex>50</zIndex></textlist>
  </view>
</feature>


</theme>