<theme>

	<formatVersion>4</formatVersion>
	
	<!-- Background Image -->
	<view name="system, basic, detailed, grid">
		<image name="background" extra="true">
			<path>./_inc/images/bg_bokeh.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
	</view>
	<view name="video">
		<image name="background">
			<path>./_inc/images/bg_bokeh.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		<image name="md_marquee">
			<pos>0.84 0.74</pos>
			<origin>0.55 0.5</origin>
			<maxSize>0.156 0.95</maxSize>
			<color>104474F0</color>
			<zIndex>40</zIndex>
		</image>
	</view>
	<!-- End Background Image -->
	
	
	<view name="system, basic, detailed, grid, video">
		
		<!--Declare empty image format with no path and a color property.
			When you later initialize a path, like in theme.xml,
			this gives you a nice transparent color overlay.
			It does make the image from the path transparent as well, however.-->
		<image name="background_system_image" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>cccccc</iconColor>
			<fontSize>0.0294</fontSize>
			<fontPath>./_inc/fonts/zrnic rg.ttf</fontPath>
			<pos>0.320 0.9375</pos>
		</helpsystem>
	</view>
	
	<view name="system">
		</view>
	
	
<feature supported="carousel">
		<view name="system">
		<carousel name="systemcarousel">
    <zIndex>70</zIndex>  
        <type>horizontal</type>
         <origin>0.392 0</origin>
        <pos>0.099 0.02</pos>
        <size>1.5 0.40</size>
       <logoScale>1.0099</logoScale>
        <logoSize>0.21 0.13</logoSize>
        <color>00000000</color>
        <maxLogoCount>13</maxLogoCount>
        <logoAlignment>center</logoAlignment>
        <zIndex>80</zIndex>
      </carousel>
      
       
      <text name="systemInfo">
         <pos>0.36 0.030</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>FFFFFF</color>
         <fontPath>./_inc/fonts/VastShadow-Regular.ttf</fontPath>
	 <fontSize>0.014</fontSize>
	 <alignment>center</alignment>
	 <zIndex>100</zIndex>
      </text>
      
     <image name="background" extra="true">
    <origin>0 0</origin>
    <pos>0 0</pos>
    <size>1 1</size>
    <path>./_inc/images/main1.png</path>
    <zIndex>2</zIndex>
</image>
<image name="background2" extra="true">
    <origin>0 0</origin>
    <pos>0 0</pos>
    <size>1 1</size>
    <path>./layout/ps3/main2.png</path>
    <zIndex>70</zIndex>
</image>
<text name="systemName" extra="true">
    <origin>0 1</origin>   <!-- Origen en la parte inferior izquierda -->
    <pos>0.32 0.50</pos>     <!-- Posición más a la izquierda (0.05) y manteniendo la altura (0.7) -->
    <size>0.6 0.1</size>  <!-- Tamaño ajustado -->
    <color>FFFFFF</color>  <!-- Color blanco -->
    <fontPath>./_inc/fonts/SSTLight.TTF</fontPath>
    <text>${system.fullName}</text>  <!-- Texto con el nombre del sistema -->
    <textStrokeColor>000000ff</textStrokeColor>
    <textStrokeSize>1</textStrokeSize>
    <zIndex>100</zIndex>   <!-- Asegura que se muestra encima de otros elementos -->
</text>

<image name="background6" extra="true">
    <origin>0 0</origin>
     <pos>0.22 0.37</pos>
    <maxSize>0.2 0.15</maxSize>
    <path>./_inc/physical-media/${system.theme}.png</path>
    <zIndex>71</zIndex>   <!-- Asegura que se muestra encima de otros elementos -->
</image>
 </view>
</feature>
<feature supported="navigationsounds">
      <view name="all">
         <sound name="systembrowse">
            <path>./_inc/audio/ps3/systembrowse.wav</path>
         </sound>
         <sound name="quicksysselect">
            <path>./_inc/audio/ps3/quicksysselect.wav</path>
         </sound>
         <sound name="select">
            <path>./_inc/audio/ps3/select.wav</path>
         </sound>
         <sound name="back">
            <path>./_inc/audio/ps3/back.wav</path>
         </sound>
         <sound name="scroll">
            <path>./_inc/audio/ps3/scroll.wav</path>
         </sound>
         <sound name="favorite">
            <path>./_inc/audio/ps3/favorite.wav</path>
         </sound>
         <sound name="launch">
            <path>./_inc/audio/ps3/launch.wav</path>
         </sound>
      </view>
   </feature>
	
