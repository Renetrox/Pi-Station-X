<theme>

	<formatVersion>4</formatVersion>

  <!-- Metadata global por sistema (fallback + sistema actual) -->
  <include>./_inc/metadata-global/_default.xml</include>
  <include>./_inc/metadata-global/${system.theme}.xml</include>

	
	<!-- Background Image -->
	<view name="system, basic, detailed, grid">
		<image name="background" extra="true">
			<path>./_inc/images/bg_bokeh.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
	</view>
	<view name="video">
		<image name="background">
			<path>./_inc/images/bg_bokeh.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		<image name="md_marquee">
			<pos>0.84 0.74</pos>
			<origin>0.55 0.5</origin>
			<maxSize>0.156 0.95</maxSize>
			<color>104474F0</color>
			<zIndex>40</zIndex>
		</image>
	</view>
	<!-- End Background Image -->
	
	
	<view name="system, basic, detailed, grid, video">
		
		<!--Declare empty image format with no path and a color property.
			When you later initialize a path, like in theme.xml,
			this gives you a nice transparent color overlay.
			It does make the image from the path transparent as well, however.-->
		<image name="background_system_image" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		 <image name="background_help" extra="true">
    <path>./_inc/images/bg_helpbar.png</path>
    <origin>0 1</origin>
    <pos>0 1</pos>
    <size>1 0.10</size>
    <color>${systemColor}CC</color>
    <zIndex>25</zIndex>
</image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>cccccc</iconColor>
			<fontPath>./_inc/fonts/zrnic rg.ttf</fontPath>
            <pos>0.012 0.9375</pos>
		</helpsystem>
	</view>
	
	<view name="system">
	<!-- Línea meta (sombra + texto) -->
  <text name="system-meta_shadow" extra="true">
    <origin>0 0</origin>
    <pos>0.102 0.727</pos> <!-- offset pequeño -->
    <size>0.683 0.035</size>
    <text>${systemHardwareType} • ${systemReleaseYear} • ${systemManufacturer}</text>
    <fontPath>./_inc/fonts/SST Bold.ttf</fontPath>
    <fontSize>0.022</fontSize>
    <color>00000099</color> <!-- sombra -->
    <alignment>left</alignment>
    <lineSpacing>1.0</lineSpacing>
    <zIndex>204</zIndex>
  </text>

  <text name="system-meta" extra="true">
    <origin>0 0</origin>
    <pos>0.100 0.725</pos>
    <size>0.683 0.035</size>
    <text>${systemHardwareType} • ${systemReleaseYear} • ${systemManufacturer}</text>
    <fontPath>./_inc/fonts/SST Bold.ttf</fontPath>
    <fontSize>0.022</fontSize>
    <color>FFFFFFFF</color>
    <alignment>left</alignment>
    <lineSpacing>1.0</lineSpacing>
    <zIndex>205</zIndex>
  </text>
	</view>
	
	
<feature supported="carousel">
	<view name="system">
		<carousel name="systemcarousel">
			<zIndex>70</zIndex>  
			<type>horizontal</type>
			<origin>0.592 0.00999</origin>
			<pos>0.279 0.09</pos>
			<size>1.5 0.40</size>
			<logoAlignment>top</logoAlignment>
			<logoScale>1.299</logoScale>
			<logoSize>0.21 0.13</logoSize>
			<color>00000000</color>
			<maxLogoCount>20</maxLogoCount>
			<minLogoOpacity>0.94</minLogoOpacity>
			<scaledLogoSpacing>1.1</scaledLogoSpacing>
			<zIndex>70</zIndex>
		</carousel>
      
		<text name="systemInfo">
			<pos>-0.30 0.03</pos>
			<backgroundColor>00000000</backgroundColor>
			<color>FFFFFF</color>
			<fontPath>./_inc/fonts/VastShadow-Regular.ttf</fontPath>
			<fontSize>0.015</fontSize>
			<zIndex>100</zIndex>
		</text>
      
		<image name="background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/images/main1.png</path>
			<zIndex>2</zIndex>
		</image>

		<image name="background2" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./layout/ps5/main2.png</path>
			<zIndex>70</zIndex>
		</image>

		<text name="systemName_shadow" extra="true">
    <origin>0 1</origin>
    <pos>0.202 0.312</pos>   <!-- sombra: +0.002 -->
    <size>0.7 0.1</size>
    <color>00000055</color>
    <fontPath>./_inc/fonts/SSTLight.TTF</fontPath>
    <text>${system.fullName}</text>
    <zIndex>99</zIndex>
</text>
<text name="systemName" extra="true">
    <origin>0 1</origin>
    <pos>0.20 0.31</pos>
    <size>0.7 0.1</size>
    <color>FFFFFF</color>
    <fontPath>./_inc/fonts/SSTLight.TTF</fontPath>
    <text>${system.fullName}</text>
    <zIndex>100</zIndex>
</text>
		<text name="trophyStats" extra="true">
			<pos>0.76 0.76</pos>
			<size>0.25 0.08</size>
			<forceUppercase>false</forceUppercase>
			<lineSpacing>1.05</lineSpacing>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.022</fontSize>
			<zIndex>160</zIndex>
			<text>
 ${system.mostPlayedFull} plays
 ${system.favoriteCount} Fav ✯

		</text>
		
		</text>

		<image name="background4" extra="true">
			<origin>0 0</origin>
			<pos>0.09 0.55</pos>
			<maxSize>0.2 0.2</maxSize>
			<path>./_inc/logos/${system.theme}.png</path>
			<zIndex>71</zIndex>
		</image>

		<image name="mostplayed_cover" extra="true">
			<path>${system.mostPlayedImage}</path>
			<pos>0.81 0.55</pos>
			<maxSize>0.20 0.30</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>130</zIndex>
		</image>

	</view>
</feature>

<feature supported="navigationsounds">
	<view name="all">
		<sound name="systembrowse"><path>./_inc/audio/ps5/systembrowse.wav</path></sound>
		<sound name="quicksysselect"><path>./_inc/audio/ps5/quicksysselect.wav</path></sound>
		<sound name="select"><path>./_inc/audio/ps5/select.wav</path></sound>
		<sound name="back"><path>./_inc/audio/ps5/back.wav</path></sound>
		<sound name="scroll"><path>./_inc/audio/ps5/scroll.wav</path></sound>
		<sound name="favorite"><path>./_inc/audio/ps5/favorite.wav</path></sound>
		<sound name="launch"><path>./_inc/audio/ps5/launch.wav</path></sound>
	</view>
</feature>
	
	<!-- =========================================================
	     AQUÍ VA LA “DECO” TIPO MINI (para gamelist views)
	     ========================================================= -->
	<view name="basic, detailed, video, grid">

		<!-- Barra superior -->
		<image name="logo_background" extra="true">
			<path>./_inc/images/bg_systembar.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.10</size>
			<zIndex>10</zIndex>
		</image>

		<!-- DECO / OVERLAY (como Mini) -->
		<!-- Cambiá el path si tu deco está en otro lugar -->
		<image name="gamelist_deco" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/images/deco_gamelist.png</path>
			<zIndex>9</zIndex>
		</image>

		<!-- Logo -->
		<image name="logo">
			<origin>0 0.66</origin>
			<pos>0.0001 0.065</pos>
			<maxSize>0.10 0.10</maxSize>
			<zIndex>20</zIndex>
		</image>

	</view>
	
	<view name="basic">		
		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>373737</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>08304f</secondaryColor>
			<fontPath>./_inc/fonts/zrnic rg.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<alignment>left</alignment>
			<size>0.50 0.79</size>
			<pos>0.04 0.10</pos>
		</textlist>
	</view>
	
	<view name="detailed, video">
		<!-- Background Image Elements -->
		<image name="no_image_bg" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.19 0.225</pos>
			<maxSize>0.30 0.25</maxSize>
			<path>./_inc/images/bg_no_game_image.png</path>
		</image>
		
		<image name="meta_bg_top" extra="true">
			<path>./_inc/images/bg_metabar_top.png</path>
			<origin>0 0</origin>
			<pos>0.36 0.10</pos>
			<size>0.58 0.09</size>
		</image>
		<image name="meta_bg_bottom" extra="true">
			<path>./_inc/images/bg_metabar_bottom.png</path>
			<origin>0 0</origin>
			<pos>0.36 0.19</pos>
			<size>0.58 0.14</size>
		</image>
		
		<image name="description_bg_outline, media_bg_outline" extra="true">
