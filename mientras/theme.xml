<theme>
  <formatVersion>7</formatVersion>

  <!-- assets por sistema -->
  <view name="system, basic, detailed, video, grid">
    <image name="logo">
      <path>./_inc/caratulas/${system.theme}.png</path>
    </image>

    <image name="background_system_image" extra="true">
      <path>./_inc/background/${system.theme}.jpg</path>
    </image>
  </view>

  <!-- base universal -->
  <include>./Swatch.xml</include>

  <!-- plantilla system elegida por theme.ini -->
  <include>${system.themeSystemView}</include>

  <!-- opcionales (por plantilla también si querés) -->
  <include>./avatar.xml</include>
  <include>./user.xml</include>
  <include>./start.xml</include>
</theme>
